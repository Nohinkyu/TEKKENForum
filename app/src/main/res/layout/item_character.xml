<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="characterInfo"
            type="com.nik.tkforum.data.model.CharacterData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_character_image"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/lite_blue"
            imageUrl="@{characterInfo.characterImage}"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@id/tv_character_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_7_brayn" />

        <TextView
            android:id="@+id/tv_character_name"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@{characterInfo.characterName}"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_character_image"
            tools:text="BRAYN" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>